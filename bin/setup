#!/usr/bin/env ruby

require 'optparse'
require 'thread'

base_opts = {
  verbose: false,
  clean: ''
}

OptionParser.new do |opt|
  opt.on "-c", "--clean" do
    base_opts[:clean] = '--clean'
  end

  opt.on "-v", "--[no]-verbose" do |v|
    base_opts[:verbose] = v
  end
end.parse!

class Ladder

  attr_reader :options

  def initialize(options)
    @options = options
    @steps = []
  end

  def do(name, &block)
    instance_eval &block
  end

  def execute(cmd)
    cmd.strip!
    puts "==> #{cmd}"
    system cmd
  end

end

Setup = Ladder.new(base_opts)

Setup.do :install_and_execute_bundler do
  execute "gem install bundler"
  execute "bundle"
end

Setup.do :prepare_for_homebrew do
  execute "sudo -v"
  execute "sudo mkdir -p /usr/local"
  execute "sudo chown -R #{`whoami`.chomp} /usr/local"
end

Setup.do :execute_librarian_and_chef do
  execute "librarian-chef install #{options[:clean]}"
  execute "chef-solo -c config/solo.rb"
end
